# 机器人配置文件
# 复制此文件为 .env 并填入你的机器人token

# 平台启用配置
# 设置为true启用相应平台，false禁用
ENABLE_DISCORD=true
ENABLE_KOOK=true

# Discord机器人配置
# 在 https://discord.com/developers/applications 创建应用并获取token
DISCORD_BOT_TOKEN=

# KOOK机器人配置
# 在 https://developer.kookapp.cn/ 创建应用并获取token
KOOK_BOT_TOKEN=

# Discord到KOOK频道转发规则配置
# 格式: FORWARD_RULES=discord_channel_id1:kook_channel_id1,discord_channel_id2:kook_channel_id2
# 示例: FORWARD_RULES=1234567890:9876543210,1111111111:2222222222
# 请将下面的频道ID替换为实际的频道ID
FORWARD_RULES=

# 是否转发机器人消息 (true/false)
FORWARD_BOT_MESSAGES=true

# 消息前缀 (可选)
MESSAGE_PREFIX=[Discord]

# ===== 会员/身份配置 =====
GUILD_ID=
MEMBER_ROLE_ID=
ADMIN_ROLE_IDS=
TRIAL_ENABLED=true
TRIAL_DURATION_HOURS=6
TRIAL_ONCE_PER_USER=true
MEMBERSHIP_STORE=sqlite
MEMBERSHIP_DB_PATH=/app/data/membership.db

# ===== OKX 配置 =====
OKX_REST_BASE=https://www.okx.com
OKX_WS_URL=wss://ws.okx.com:8443/ws/v5/public
OKX_INST_IDS=BTC-USDT-SWAP,ETH-USDT-SWAP
OKX_COPY_MONITOR_ENABLED=true
OKX_POLL_INTERVAL_SEC=5
OKX_WS_ENABLED=true
OKX_REST_ENABLED=true

# ===== 监控与 Deepseek 配置 =====
MONITOR_CHANNEL_IDS=
MONITOR_PARSE_ENABLED=true
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_ENDPOINT=https://api.deepseek.com/v1/chat/completions
; 绑定格式：channelId=uniqueCode@instId;channelId2=code2@inst2
MONITOR_BINDINGS=

MIRROR_ENABLED=true
DISCORD_GUILD_ID=你的Discord服务器ID
KOOK_GUILD_ID=你的KOOK服务器ID
MIRROR_CHANNEL_PREFIX=可选的频道名前缀（例如 d-）