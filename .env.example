# ============================================
# Discord Bot 配置
# ============================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
ENABLE_DISCORD=true

# ============================================
# 带单员配置（重要！）
# ============================================
# 格式：带单员ID|Discord频道ID|OKX带单员uniqueCode|带单员名称
# 示例：从 https://www.okx.com/zh-hans/copy-trading/account/35E22983F436F55B 获取
# uniqueCode 就是链接中的 35E22983F436F55B
TRADER_CONFIG=trader1|123456789|35E22983F436F55B|带单员1

# 如果需要配置多个带单员，用分号(;)分隔：
# TRADER_CONFIG=trader1|123456789|35E22983F436F55B|带单员1;trader2|987654321|ABC123XYZ|带单员2

# ============================================
# 监控配置
# ============================================
# 需要监控的Discord频道ID（用逗号分隔，应该与TRADER_CONFIG中的channel_id对应）
MONITOR_CHANNEL_IDS=123456789

# 启用AI解析
MONITOR_PARSE_ENABLED=true

# ============================================
# Deepseek AI配置
# ============================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_ENDPOINT=https://api.deepseek.com/v1/chat/completions

# ============================================
# OKX配置
# ============================================
OKX_REST_BASE=https://www.okx.com
OKX_WS_URL=wss://ws.okx.com:8443/ws/v5/public

# 需要监控的交易对（系统会自动获取这些交易对的实时价格）
# 建议包含所有带单员可能交易的币种
OKX_INST_IDS=BTC-USDT-SWAP,ETH-USDT-SWAP,SOL-USDT-SWAP

# 轮询间隔（秒）
OKX_POLL_INTERVAL_SEC=5

# 启用OKX功能
OKX_COPY_MONITOR_ENABLED=true
OKX_WS_ENABLED=true
OKX_REST_ENABLED=true

# ============================================
# 数据库配置
# ============================================
MEMBERSHIP_DB_PATH=./data/membership.db

# ============================================
# 会员功能（可选）
# ============================================
TRIAL_ENABLED=true
TRIAL_DURATION_HOURS=6
TRIAL_ONCE_PER_USER=true

# ============================================
# 角色配置（可选）
# ============================================
GUILD_ID=your_discord_guild_id
MEMBER_ROLE_ID=your_member_role_id
ADMIN_ROLE_IDS=role_id1,role_id2

